            }
        }

.favorit-cont {
  display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 40px;
            margin-bottom: 40px;
}

.favorit-cont h2 {
 color: #849500;
}


.cont_udforsk {
    display:grid;
    background-color: #F3ECD9 ;
    color: #262521;
    padding-left: 17px;


}

.om {
    display: flex;
    align-items:center;
    align-content:center;
}
.om img{
padding-left:5px;
}
.kabomani p {
    font-size:0.7rem;
}

.om:hover{
    text-decoration:underline;
}

.cont_udforsk a {
    color: #262521
}


.carousel-box {
      display: flex;
            justify-content: center;
            align-items: center;
}
  .carousel-container {
            width: 96%;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .carousel {
            display: flex;
            width: calc(100% * 12 / 4); /* Adjust the width based on the number of items */
            animation: scroll 15s linear infinite;
        }

        .carousel-item {
            min-width: calc(100% / 12);
            box-sizing: border-box;
        }

        .carousel-item img {
            width: 100%;
            display: block;
        }

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-66.67%);
            }
        }
.container {
     display: flex;
            justify-content: center;
            align-items: center;
            margin: 10%
}

@media (min-width:800px) {
.kabomani p {
    font-size:1rem;
}
.cont_udforsk {
    padding-left: 40px;
